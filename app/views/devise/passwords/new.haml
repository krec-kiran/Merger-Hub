/ ******Forget Password Section******
%section.login-section.access-section.section
  .container
    .row
      .form-box.col-sm-6.col-md-4.col-md-offset-4
        .form-box-inner
          %h2.text-center Forgot your password?
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
            = devise_error_messages!
            .row
              .form-container
                %form.login-form
                  .form-group.user_name_icon
                    = f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email", type: "email"
                  / //form-group
                  .form-group
                    = f.submit "Submit", class: "col-md-offset-2 btn btn-success"
                    %a.btn.btn-warning{:href => "/"} Cancel
