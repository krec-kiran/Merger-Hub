<%= f.fields_for :locations do |location| %>
<div class="form-group">
  <%= location.label :street, class: "control-label col-sm-4" %>
  <div class="col-sm-8">
    <%= location.text_field :street, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= location.label :city, class: "control-label col-sm-4" do %>
   City <i class="fa fa-star"></i>
  <% end %>
  <div class="col-sm-8">
    <%= location.text_field :city, class: "form-control" %>
  </div>
</div>
</div>
<div class="col-md-6">
<div class="form-group">
  <%= f.label :website, class: "control-label col-sm-4" do %>
    Website <i class="fa fa-star"></i>
  <% end %>
  <div class="col-sm-8">
    <%= f.text_field :website, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :summary, class: "control-label col-sm-4" %>
  <div class="col-sm-8">
    <%= f.text_area :summary, class: "form-control" %>
  </div>
</div>
  <div class="form-group">
    <%= location.label :state, class: "control-label col-sm-4" %>
    <div class="col-sm-8">
      <%= location.text_field :state, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= location.label :country, class: "control-label col-sm-4" do %>
      Country <i class="fa fa-star"></i>
    <% end %>
    <div class="col-sm-8">
      <%= location.text_field :country, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= location.label :pin_code, class: "control-label col-sm-4" do %>
      Pin code
    <% end %>
    <div class="col-sm-8">
      <%= location.text_field :pin_code, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= location.label :is_headquarter, class: "control-label col-sm-4" %>
    <div class="col-sm-8">
      <%= location.check_box :is_headquarter %>
    </div>
  </div>
  <% end %>