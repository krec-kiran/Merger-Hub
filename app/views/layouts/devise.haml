/[if IE 8] <html lang="en" class="ie8">
/[if IE 9] <html lang="en" class="ie9">
%head
  %title MergerHub
  / Meta
  %meta{:charset => "utf-8"}
  %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
  %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
  %meta{:content => "", :name => "description"}
  %meta{:content => "", :name => "author"}
  = stylesheet_link_tag "application"
  = javascript_include_tag "jquery"
  = csrf_meta_tags
  / HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
  /[if lt IE 9]
    / SCRIPTS
    =# javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"
    =# javascript_include_tag "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"
%body.login-page.access-page.has-full-screen-bg.login-main-page
  .upper-wrapper
    / ******HEADER******
    %header.header
      .container
        %h1.logo
          %a{:href => "/"}
            %span.logo-icon
            %span.text MergerHub
        / //logo
      / //container
    / //header
    .container.w-xxl.w-auto-xs
    = render 'toastr_rails/flash'
    = yield
  / //upper-wrapper

  / jQuery
  / SCRIPTS
  = javascript_include_tag "application"