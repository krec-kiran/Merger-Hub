/[if IE 8] <html lang="en" class="ie8">
/[if IE 9] <html lang="en" class="ie9">
/[if !IE] <html lang="en">
%head
  %title MergerHub
  / Meta
  %meta{:charset => "utf-8"}
  %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
  %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
  %meta{:content => "", :name => "description"}
  %meta{:content => "", :name => "author"}
  =# favicon_link_tag 'favicon.ico'
  = stylesheet_link_tag "application"
  = javascript_include_tag "jquery"
  = csrf_meta_tags
  /[if lt IE 9]
    / SCRIPTS
    =# javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"
    =# javascript_include_tag "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"

%body.blog-page.blog-archive-page
  = render "layouts/header"
  = render 'toastr_rails/flash'
  = render "layouts/content"
  = render "layouts/footer"
  / //wrapper

  / jQuery
  / SCRIPTS
  = stripe_javascript_tag
  = javascript_include_tag "application"
